{
  "expo": {
    "name": "VenceJa",
    "slug": "venceja-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/adaptive-icon.png",
    "scheme": "venceja",
    "adaptiveIcon": {
      "foregroundImage": "./assets/adaptive-icon.png",
      "backgroundColor": "#A7B758"
    },
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#A7B758"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.venceja.mobile"
    },
    "android": {
      "newArchEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#A7B758"
      },
      "package": "com.venceja.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite o VenceJá acessar suas fotos para escanear boletos.",
          "cameraPermission": "Permite o VenceJá acessar sua câmera para escanear boletos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#A7B758",
          "sounds": []
        }
      ],
      [
        "expo-share-intent",
        {
          "android": {
            "intentFilters": [
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "image/*"
                }
              },
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "application/pdf"
                }
              },
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "image/jpeg"
                }
              },
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "image/png"
                }
              }
            ]
          },
          "ios": {
            "activationRules": {
              "NSExtensionActivationSupportsImageWithMaxCount": 1,
              "NSExtensionActivationSupportsFileWithMaxCount": 1
            }
          }
        }
      ]
    ],
    "extra": {
      "apiUrl": "https://venceja-core-production.up.railway.app/api/v1"
    }
  }
}